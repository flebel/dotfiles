[alias]
	c = commit
	d = diff
	dc = diff --cached
	pup = "!f(){ git pull --rebase && git submodule init && git submodule update && git submodule status; };f"
	s = status
	sin = submodule init
	sup = submodule update

[color]
	ui = true

[core]
	editor = vim
	filemode = false

[help]
	autocorrect = 1

[merge]
	tool = meld

