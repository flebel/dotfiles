[alias]
	a = add
	b = branch
	c = commit
	co = checkout
	d = diff
	dc = diff --cached
	l = log --color --graph --pretty=format:'%Cred%h%Creset %C(magenta)%an%Creset%C(yellow)%d%Creset %s %Cgreen%cr%Creset %C(cyan)%ad%Creset' --abbrev-commit
	pup = "!f(){ git pull --rebase && git submodule init && git submodule update && git submodule status; };f"
	s = status
	sin = submodule init
	st = stash
	sup = submodule update

[color]
	ui = true

[core]
	editor = vim
	filemode = false

[help]
	autocorrect = 1

[merge]
	tool = meld

